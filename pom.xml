              <arguments>
                <argument>-h9896</argument>
                <argument>-s9897</argument>
                <argument>-p9899</argument>
                <argument>stop</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
